<Page x:Class="ychkapustnikov.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ychkapustnikov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" 
      Title="Main">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="800" Height="450" VerticalAlignment="Center">
        <StackPanel.Background>
                <ImageBrush ImageSource="/Pages/1.jpg" TileMode="FlipXY" Stretch="UniformToFill"/>
            </StackPanel.Background>
            <Button Content="Выход" Margin="3" HorizontalAlignment="Right" Height="50" Width="90" Click="Button_Click" Background="#FFE88C1D" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="18"/>
            <Button Content="Покупатели" Margin="5" Height="50" Width="150" Click="Button_Click_1" Background="#FFE88C1D" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="18"/>
            <Button Content="Ингридиенты" Margin="5"  Height="50" Width="150" Click="Button_Click_2" Background="#FFE88C1D" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="18"/>
            <Button Content="Позиции заказа" Margin="5"  Height="50" Width="150" Click="Button_Click_3" Background="#FFE88C1D" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="18"/>
            <Button Content="Заказы" Margin="5"  Height="50" Width="150" Click="Button_Click_4" Background="#FFE88C1D" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="18"/>
            <Button Content="Рецептура" Margin="5"  Height="50" Width="150" Click="Button_Click_5" Background="#FFE88C1D" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="18"/>
            <Button Content="Меню" Margin="5"  Height="50" Width="150" Click="Button_Click_6" Background="#FFE88C1D" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="18"/>
        </StackPanel>
    </Grid>
</Page>
