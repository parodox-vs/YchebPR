<Page x:Class="ychkapustnikov.Pages.Avtoriz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ychkapustnikov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Avtoriz">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="800" Height="450" VerticalAlignment="Center">
            <Label Content="Логин администратора" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="Black" FontFamily="Century Schoolbook" FontSize="18"/>
            <TextBox x:Name="T" Width="598"/>
            <Label Content="Пароль" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="Black" FontFamily="Century Schoolbook" FontSize="18"/>
            <TextBox x:Name="T1" Width="602"/>
            <Button x:Name="SaveBtn" Content="Войти" Margin="7" RenderTransformOrigin="0.498,2.986" Width="200" Background="#FFE88C1D" Foreground="Black" Height="24" FontFamily="Century Schoolbook" FontSize="18" Click="SaveBtn_Click" />
            <Button x:Name="BackBtn" Content="Войти как пользователь" Margin="7" RenderTransformOrigin="0.498,2.986" Width="220" HorizontalAlignment="Center" Background="#FFE88C1D" Foreground="Black" Height="24" FontFamily="Century Schoolbook" FontSize="18" Click="BackBtn_Click" />
            <Image Height="262" Source="/Pages/Image1.png" Stretch="Fill" Width="709"/>
        </StackPanel>
    </Grid>
</Page>
