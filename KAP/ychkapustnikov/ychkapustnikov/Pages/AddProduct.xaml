<Page x:Class="ychkapustnikov.Pages.AddProduct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ychkapustnikov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProduct">

    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock Text="ID Продукта" Margin="5" Width="450" Height="25"/>
            <TextBox Text="{Binding ProductID}" Height="25"/>
            <TextBlock Text="Продукт" Margin="5"/>
            <TextBox Text ="{Binding Name}" Height="25"/>
            <TextBlock Text="Описание" Margin="5"/>
            <TextBox Text ="{Binding Description}"  Height="25"/>
            <TextBlock Text="Стоимость" Margin="5"/>
            <TextBox Text ="{Binding Price}" Height="25"/>
            <TextBlock Text="Категория" Margin="5"/>
            <TextBox Text ="{Binding Category}" Height="25"/>
        </StackPanel>
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="ADDBtn" Content="Добавить" Margin="5" Height="25" Width="150" Background="#FFE88C1D" Click="ADDBtn_Click"/>
            <Button x:Name="ExitBtn" Content="Назад" Margin="5" Height="25" Width="150" Background="#FFE88C1D" Click="ExitBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
